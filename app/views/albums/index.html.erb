<h1>
  <%= link_to 'New Album', new_album_path, class: 'btn btn-primary' %>
  Albums <small>list of all albums</small>
</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= sort_link @q, :id %></th>
      <th><%= sort_link @q, :title %></th>
      <th><%= sort_link @q, :is_visible %></th>
      <th><%= sort_link @q, :weight %></th>
      <th>Images</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.id %></td>
        <td>
          <%= link_to album.title, album_path(album) %><br/>
          <%= album.description %><br/>
        </td>
        <td>
          <% if album.is_published? %>
            visible
          <% else %>
            <span class="label label-important">hidden</span>
          <% end %>
        </td>
        <td><%= album.weight %></td>
        <td><%= album.images.size %></td>
        <td>
          <p>
            <%= link_to 'Edit', edit_album_path(album), class: 'btn btn-primary' %>
            <%= link_to 'Delete', album_path(album), class: 'btn', method: 'delete', data: { confirm: 'Delete album ?' } %>
          </p>
        </td>
      </tr>
    <% end %>
  </tbody>
  <thead>
    <tr>
      <th><%= sort_link @q, :id %></th>
      <th><%= sort_link @q, :title %></th>
      <th><%= sort_link @q, :is_visible %></th>
      <th><%= sort_link @q, :weight %></th>
      <th>Images</th>
      <th>Actions</th>
    </tr>
  </thead>
</table>
